{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn app:app --bind 0.0.0.0:8000 --workers 2 --timeout 120",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "readiness": {
        "exec": ["curl", "--fail", "http://localhost:8000/"],
        "initialDelaySeconds": 10,
        "periodSeconds": 10
      }
    }
  },
  "volumes": [
    {
      "name": "kanban-data",
      "mountPath": "/app/data"
    }
  ],
  "environment": {
    "DATA_DIR": "/app/data",
    "FLASK_ENV": "production"
  }
}
